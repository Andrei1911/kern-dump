	@CLASSES
    @MMK_L_CYR_LC_a.cyr = [a.cyr abrevecyr acyr.begin1];

    # glyph, glyph
    pos Alpha.swash1 alpha.begin1 20;
    pos Alpha.swash1 alphalatin 30;
    pos Alpha.swash1 iota.begin1 10;
    pos Alpha.swash1 lambda.begin1 -150;

    # glyph, group exceptions
    enum pos Lcaron [quotedblright quoteright] 150;
    enum pos dcroat [quotedblleft quoteleft] 130;

    # group exceptions, glyph
    enum pos [Ghe Ghestroke Gje] tshe.begin1 30;
