    enum pos [N Nacute Ncaron Ncommaaccent Ncommaaccent.locl Ncommaaccent.ss03 Ndotaccent Ndotbelow Nlinebelow Ntilde] ecircumflexgrave 20;

    # glyph, group
    pos A.swash2 @MMK_R_colon 25;
    pos A.swash2 @MMK_R_comma 30;
    pos A.swash2 @MMK_R_hyphen 35;

    # group, glyph
    pos @MMK_L_CYR_LC_be che.begin1 -20;
    pos @MMK_L_CYR_LC_be che.begin4 -20;
    pos @MMK_L_CYR_LC_be de.alt1 -10;
    pos @MMK_L_CYR_LC_be de.alt10 -10;

    # group, group
    pos @MMK_L_CYR_LC_be @MMK_R_CYR_LC_a.cyr -10;
    pos @MMK_L_CYR_LC_be @MMK_R_CYR_LC_de -10;
    pos @MMK_L_CYR_LC_be @MMK_R_CYR_LC_dje 10;

} kern;

